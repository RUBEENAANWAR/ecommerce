<div class="col-lg-12 me-1 rounded" style="background-color:#c9b4b8 ;">
  <h1>
    <center><i><b>Sales Report {{count}} </b></i></center>
    <div class="dropdown">
      <button
        class="btn dropdown-toggle btn-success"
        type="button"
        id="dropdownMenuButton"
        data-toggle="dropdown"
        aria-haspopup="true"
        aria-expanded="false"
      >
        Download
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <a class="dropdown-item" href="/admin/exportExcel">excel</a>
        <button class="dropdown-item" onclick="myfun('pt')">PDF</button>
      </div>
    </div>

    {{! <div class="down_btn_wrap  mb-3">
            <div class="btn-group">
                <a class="btn btn-warning dropdown-toggle mb-2" data-bs-toggle="dropdown" aria-expanded="false">
                    Download
                </a>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="/admin/exportExcel">Excel</a></li>
                    <li><button class="dropdown-item" onclick="myfun('pt')">Pdf</button></li>

                </ul>
            </div>

        </div> }}
  </h1>
  <div class="mask d-flex align-items-center mb-3 h-80">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-12">
          <div class="table-responsive bg-white">
            <div class="table-wrap" id="pt">
              <table class="table mb-0" id="example">

                <thead>
                  <tr>

                    <th scope="col">order Date</th>
                    <th scope="col">order Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Payment Method</th>
                    <th scope="col">Status</th>
                    <th scope="col">Total</th>

                  </tr>
                </thead>
                <tbody>
                  {{#each orders}}
                    <tr>

                      <th scope="row" style="color: #666666;">{{this.date}}</th>
                      <td>{{this._id}}</td>
                      <td>{{this.deliveryDetails.name}}</td>
                      <td> {{this.paymentMethod}} </td>
                      <td>{{this.status}}</td>
                      <td>Rs.{{this.totalAmount}}/-</td>

                      <!-- Modal -->

                    </tr>
                  {{/each}}
                </tbody>

              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>

<script>
  $(document).ready(function() { $('#example').DataTable( { dom: 'Bfrtip',
  buttons: [ 'copy', 'csv', 'excel', 'pdf', 'print' ] } ); } );
</script>

