<section>
<div class="container">
<table class="table mt-2">  
    <div class="row">
        <a href="/admin/add-product" class="btn btn-info m-3 ml-auto"> add product</a>
        <a href="/admin/logout" class="btn btn-danger" style="width: 8rem; height: 40px; margin-top: 15px;">Logout</a>

    </div>
  <table class="table mt-5" id="productsTable">
  <thead>
    <tr>
      <th scope="col">no</th>
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th>Image</th>
      <th scope="col">Price</th>
      <th scope="col">Stock available</th>

      <th>Options</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <th scope="row">{{inc @index}}</th>
      <td>{{this.Name}}</td>
      <td>{{this.category}}</td>
      <td>{{this.Description}}</td>
      <td><img style="width:50px;heigth:50px;"src="/product-images/{{this._id}}.jpg" alt="baby dress"></td>
      <td>{{this.Price}}</td>
      <td>{{this.stock}}</td>

      <td>
          <a href="admin/edit-product/{{this._id}}" class="btn btn-success">Edit</a>
        <a href="admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sure to delete {{this.Name}}')"
       >Delete</a> 
     </td>
    </tr>
{{/each}}
  </tbody>
</table>
</table>


</div>
</section>
<script>
$(document).ready( function () {
    $('#productsTable').DataTable();
} );
</script>

