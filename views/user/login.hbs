
<div class="row" style="background:rgb(199, 180, 180); margin:5rem; margin-left:20rem; margin-right:20rem; padding-bottom: 3rem;">
  <div class="col-md-6 m-auto">
    <div class="container mt-5 pl-5">
      <h2 class="text-center">Login</h2>
      <form action="/login" method="post">
     
        <div class="form-group">
          <label>Email Adress</label>
          <input
            type="email"
            class="form-control mb-2"
            name="Email"
            placeholder="Enter email"
          />
        </div>
         {{#if loginErr}}
          <p class="error" style="color: red;">Invalid username</p>
      {{/if}}
        <div class="form-group">
          <label>Password</label>
          <input
            type="password"
            class="form-control mb-2"
            name="Password"
            placeholder="Password"
          />
        </div>
         {{#if loginErr}}
          <p class="error" style="color: red;">Invalid password</p>
      {{/if}}
        <a href="/signup" class="text-decoration-none">Create new account ?</a>
        <button
          type="submit"
          class="btn float-end mt-1"
          style="background:indigo; color: aliceblue;"
        >Login</button>
      </form>
      {{!-- {{#if loginErr}}
        <p class="text-danger m-auto">{{loginErr}}</p>
      {{/if}} --}}
    </div>
  </div>
</div>

