<section>
    <div class="container mt-5">
        <h3><b>Wishlist</b></h3>
        <table class="table mt-5" id="productsTable">
            <thead>
                <tr>

                    <th scope="col">Item</th>
                    <th scope="col">Title</th>
                    <th scope="col">Price</th>
                    
                    <th scope="col">Options</th>
                    <th scope="col">Add</th>


                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <td><img style="width:70px;height:70px" src="/product-images/{{this.product._id}}.jpg" alt=""></td>
                    <td>{{this.product.Name}}</td>
                    <td>Rs.{{this.product.Price}}</td>

                    <td>
                        <button  class="cart-item-count ml-3 btn btn-outline-danger" onclick="removeWishlistProduct('{{this._id}}','{{this.product._id}}')" >Remove</button> 
                    </td>

                      <td>
