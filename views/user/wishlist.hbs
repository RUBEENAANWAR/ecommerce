</div>
    </div>
</section>
<script>
function removeWishlistProduct(wishlistId,proId){
       $.ajax({
        url:'/removeWishlistProduct',
        data:{
                wishlist:wishlistId,
                product:proId
            },
            method:'post',
             success:(response)=>{
                if(response.removeProduct){
                    alert("Are you sure to remove the product from your wishlist ?")
                    location.reload()
                }
            }
       }) 

    }
</script>

