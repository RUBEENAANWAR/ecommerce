<section class="h-100 gradient-custom">
    <div class="page-content page-container" id="page-content">
        <div class="padding">
            <div class="padding"></div>
            <div class="row container d-flex justify-content-center">
                <div class="col-md-6 col-lg-12">
                    <div class="card user-card-full">
                        <div class="row m-l-0 m-r-0">
                            <div class="col-sm-4 bg-c-lite-green user-profile">
                                <div class="card-block text-center text-white">
                                    <div class="m-b-25">

                                        <p style="margin-right: 75%;">Hello,</p>
                                        {{#if user}}
                                        <img src="https://img.icons8.com/bubbles/100/000000/user.png" class="img-radius"
                                            alt="User-Profile-Image" />
                                    </div>

                                    <h6 class="f-w-600">{{user.name}}</h6>{{/if}}
                                    <i class="mdi mdi-square-edit-outline feather icon-edit m-t-10 f-16"></i>
                                </div>
                            </div>
                            <div class="col-sm-8">
                                <div class="card-block">


                                    <h6 class="m-b-20 m-t-40 p-b-5 b-b-default f-w-600">Address Update</h6>
                                    <div class="container">


                                        <!-- Single item -->
                                        <form method="post" id="address" action="/addAddress"
                                            enctype="multipart/form-data">

                                            <div class="row">
                                                
                                                <div class="col-lg-5 col-md-6 mb-4 mb-lg-0">
                                                    <!-- Data -->
                                                    <div class="row align-items-center pt-4 pb-3">



                                                        <div class="col">

                                                            <input type="text"
                                                                placeholder="Address"
                                                                name="address"
                                                                class="form-control border-primary form-control-lg" />

                                                        </div>
                                                    </div>
                                                </div>


                                            </div>
                                           
                                            <div class="row">
                                                <div class="col-6"></div>
                                                <div class="col-sm-4"><button type="submit"
                                                        class="btn btn-primary btn-lg btn-block">
                                                        Add
                                                    </button></div>
                                            </div>




                                    </div>
                                </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="padding"></div>
        <div class="padding"></div>
</section>