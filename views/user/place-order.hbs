<div class="card-header py-3">
  <h5 class="mb-0 mt-2"><b>Billing Details</b></h5>
</div>
<div class="container mt-4">
  <div class="col-lg-4 mt-3"> <a href="/addAddress" class="btn mb-1 btn-sm btn-success">Add
                        Address</a>
                    </div>
  <form class="mt-4" action="/place-order" id="checkout-form" method="post">
    <div class="row">
      <div class="col-md-8 border border-dark">
        <!-- 2 column grid layout with text inputs for the first and last names -->
        <div class="mb-4">
          <div class="form-outline">
            <label class="form-label" for=""><b>Name</b></label>
            <input
              type="text"
              id="name"
              name="name"
              class="form-control border border-dark"
            />
          </div>
          <div class="form-outline mb-4">
            <label class="form-label" for="mobile"><b>Mobile</b></label>
            <input
              type="number"
              id="mobile"
              name="mobile"
              class="form-control border border-dark"
            />
          </div>
          <div class="form-outline mb-4">
            <label for="flat"><b>Flat no/House no</b></label>
            <select class="form-control border border-dark" name="flat" id="">
              {{#each address}}
                <option
                  class="form-control border border-dark"
                  value="{{this.flat}}"
                >{{this.flat}}</option>
              {{/each}}
            </select><br />
          </div>
          <div class="form-outline mb-4">
            <label for="area"><b>Area:</b></label>
            <select class="form-control border border-dark" name="area" id="">
              {{#each address}}
                <option
                  class="form-control border border-dark"
                  value="{{this.area}}"
                >{{this.area}}</option>
              {{/each}}
            </select><br />
          </div>
          <div class="form-outline mb-4">
            <label for="pincode"><b>Pincode</b></label>
            <select
              class="form-control border border-dark"
              name="pincode"
              id=""
            >
              {{#each address}}
                <option
                  class="form-control border border-dark"
                  value="{{this.pincode}}"
                >{{this.pincode}}</option>
              {{/each}}
            </select><br />
          </div>
          <div class="form-outline mb-4">
            <label for="landmark"><b>Landmark</b></label>
            <select
              class="form-control border border-dark"
              name="landmark"
              id=""
            >
              {{#each address}}
                <option
                  class="form-control border border-dark"
                  value="{{this.landmark}}"
                >{{this.landmark}}</option>
              {{/each}}
            </select><br />
          </div>
          <div class="form-outline mb-4">
            <label for="city"><b>City</b></label>
            <select class="form-control border border-dark" name="city" id="">
              {{#each address}}
                <option
                  class="form-control border border-dark"
                  value="{{this.city}}"
                >{{this.city}}</option>
              {{/each}}
            </select><br />
          </div>
          <div class="form-outline mb-4">
            <label for="state"><b>State</b></label>
            <select class="form-control border border-dark" name="state" id="">
              {{#each address}}
                <option
                  class="form-control border border-dark"
                  value="{{this.state}}"
                >{{this.state}}</option>
              {{/each}}
            </select><br />
          </div>
          <!-- Number input -->
          <div class="form-outline mb-4">
            <input
              type="text"
              name="userId"
              id=""
              value="{{user._id}}"
              hidden
            />
          </div>
        </div>
      </div>
      <div class="col-md-4 border border-dark">
        <div class="card-header py-3 mt-4">
          <h5 class="mb-0">Summary</h5>
        </div>
        <div class="card-body">
          <ul class="list-group">
            <li>
              <div>
                <strong>Total amount</strong>
              </div>
              <span><strong>Rs.{{total}}</strong></span>
            </li>
          </ul>
          <hr />
          <div class="payment">
            <h5>Payment Method</h5>
            <label class="radio-inline">
              <input
                type="radio"
                name="payment-method"
                value="COD"
                checked
              />Cash On Delivery
            </label><br />
            <label class="radio-inline mt-2">
              <input type="radio" name="payment-method" value="ONLINE" />Online
              Payment
            </label>
            <button type="submit" class="btn btn-primary mt-5">Checkout</button>
          </div>
        </div>
      </div>
    </div>
  </form>
</div>


<script>
  $("#checkout-form").submit((e) => {
    e.preventDefault()
    $.ajax({
      url: '/place-order',
      method: 'post',
      data: $('#checkout-form').serialize(),
      success: (response) => {
        alert(response)
        if(response.codSuccess){
          location.href='/order-success'
        }else{
          razorpayPayment(response)
        }
      }

    })
  })
  function razorpayPayment(order){
    var options = {
    "key": "rzp_test_IGPhwTArryE2pg", // Enter the Key ID generated from the Dashboard
    "amount": order.amount, // Amount is in currency subunits. Default currency is INR. Hence, 50000 refers to 50000 paise
    "currency": "INR",
    "name": "Hips and hops ",
    "description": "Test Transaction",
    "image": "https://example.com/your_logo",
    "order_id": order.id, //This is a sample Order ID. Pass the `id` obtained in the response of Step 1
    "handler": function (response){
    

        verifyPayment(response,order)
    },
    "prefill": {
        "name": "Gaurav Kumar",
        "email": "gaurav.kumar@example.com",
        "contact": "9999999999"
    },
    "notes": {
        "address": "Razorpay Corporate Office"
    },
    "theme": {
        "color": "#66251f"
    }
};
var rzp1 = new Razorpay(options);
 rzp1.open();

  }
  function verifyPayment(payment,order){
    $.ajax({
      url:'/verify-payment',
      data:{
        payment,
        order
      },
      method:'post',
      success:(response)=>{
        if(response.status){
          location.href='/order-success'
        }else{
          alert("payment failed")
        }
      }
    })
  }
</script>
<style>
  .checkout{
    border:1px solid;
    border-radius: 3px;
    padding: 30px;
  }
  .payment{
    padding-bottom: 16px;
  }
</style>