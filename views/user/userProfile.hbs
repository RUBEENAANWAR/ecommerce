<section class="h-100 gradient-custom">
  <div class="page-content page-container" id="page-content">
    <div class="padding">
      <div class="padding"></div>
      <div class="row container d-flex justify-content-center">
        <div class="col-md-6 col-lg-12">
          <div class="card user-card-full">
            <div class="row m-l-0 m-r-0">
              <div class="col-sm-4 bg-c-lite-green user-profile">
                <div class="card-block text-center text-white">
                  <div class="m-b-25">

                    <p style="margin-right: 75%;">Hello,</p>
                    {{#if user}}
                    <img src="https://img.icons8.com/bubbles/100/000000/user.png" class="img-radius"
                      alt="User-Profile-Image" />
                  </div>

                  <h6 class="f-w-600">{{user.name}}</h6>
                  <a href="/user/userProfile" style="color: blue;margin-left: 5%;">Change Password ?</a>
                  <i class="mdi mdi-square-edit-outline feather icon-edit m-t-10 f-16"></i>
                </div>
              </div>
              <div class="col-sm-8">
                <div class="card-block">
                  <h6 class="m-b-20 p-b-5 b-b-default f-w-600">Personal Information</h6>
                  <form method="post" id="emailPhone" action="/user/userInfoUpdate">
                    <div class="row">
                        <div class="col-sm-6">
                        <p class="m-b-10 f-w-600">Name</p>
                        <input type="text" placeholder="Name" value="{{user.Name}}" name="Name"
                          class="form-control border-primary form-control-lg" />

                      </div>
                      <div class="col-sm-6">
                        <p class="m-b-10 f-w-600">Email</p>
                        <input type="text" placeholder="Email Id" value="{{user.email}}" name="email"
                          class="form-control border-primary form-control-lg" />

                      </div>
                      <div class="col-sm-6">
                        <p class="m-b-10 f-w-600">Mobilenumber</p>
                        <input type="text" placeholder="Mobilenumber" value="{{user.Mobilenumber}}" name="Mobilenumber"
                          class="form-control border-primary form-control-lg" />
                        <h6 class="text-muted f-w-400"></h6>
                      </div>

                    </div>
                    <div class="row">
                      <div class="col-6"></div>
                      <div class="col-sm-4"><button type="submit" class="btn btn-primary btn-lg btn-block">
                          Update
                        </button></div>
                    </div>
                  </form> {{/if}}
                  <h6 class="m-b-20 m-t-40 p-b-5 b-b-default f-w-600">Address</h6>
                  <div class="row">
                    <div class="col"></div>
                    <div class="col-lg-4"> <a href="/addAddress" class="btn mb-5 btn-sm btn-primary">Add
                        Address</a>
                    </div>
                  </div>
                  <div class="container">
                    <div class="row">
                      {{#each address}}
                      <div class="col-lg-6 mt-5">
                        <div class="card card-margin">
                          <div class="card-header no-border">
                            <h5 class="card-title">{{#if this.default}}
                              <span class="badge badge-success">Default</span>
                              {{/if}}

                            </h5>
                          </div>
                          <div class="card-body pt-0">
                            <div class="widget-49">
                              <div class="widget-49-title-wrapper">

                                <div class="widget-49-meeting-info">
                                  <span class="widget-49-pro-title">{{this.Name}}</span>
                                  <span class="widget-49-meeting-time">{{this.mobilenumber}}</span>
                                  <span class="widget-49-meeting-time">{{this.email}}</span>
                                </div>
                              </div>
                              <ul class="widget-49-meeting-points">
                                <span>{{this.address}}</span></li>
                                {{this.pincode}}
                              </ul>
                              <div class="widget-49-meeting-action">
                                <div class="row">
                                  <div class="col">{{#if this.default}}
                                    {{else}}
                                    <a href="/addressDefault/{{this._id}}" class="btn btn-sm btn-primary">Set as
                                      Default</a>
                                    {{/if}}
                                  </div>
                                  <div class="col"> <a href="/addressUpdate/{{this._id}}"
                                      class="btn btn-sm btn-primary">Update</a></div>

                                </div>

                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                      {{/each}}

                    </div>

                  </div>

                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="padding"></div>
      <div class="padding"></div>
</section>

